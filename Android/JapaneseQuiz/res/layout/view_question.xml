<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="やまださんは　すずきさんに　えいごを　おしえました。"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPharagrahp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="やまださんは　すずきさんに　えいごを　おしえました。" />

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="やまださんは　すずきさんに　えいごを　おしえました。" />

        <com.haui.japanese.view.ResizableImageView
            android:id="@+id/imgQuestion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/tv200641" >
        </com.haui.japanese.view.ResizableImageView>

        <RadioGroup
            android:id="@+id/dapan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingTop="10dp" >

            <RadioButton
                android:id="@+id/dapan1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="１．すずきさんは　やまださんに　えいごを　みせました。" />

            <RadioButton
                android:id="@+id/dapan2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="２．やまださんは　すずきさんに　えいごをを　みせました。" />

            <RadioButton
                android:id="@+id/dapan3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="３．すずきさんは　やまださんに　かえいごを　ならいました。" />

            <RadioButton
                android:id="@+id/dapan4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="４．やまださんは　すずきさんに　えいごを　ならいました。" />
        </RadioGroup>
    </LinearLayout>

</ScrollView>