<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exam_item_grid_view_row_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/exam_undone"
    android:minHeight="100.0dip"
    android:minWidth="100.0dip"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/exam_number_prefix"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:gravity="center"
        android:text="Đề thi năm"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvYearExam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:layout_marginTop="5.0dip"
        android:gravity="center"
        android:text="2006"
        android:textColor="@color/black"
        android:textSize="26.0sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/exam_result_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvRightExam"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="5.0dip"
            android:drawableLeft="@drawable/right_mark"
            android:drawablePadding="5.0dip"
            android:gravity="center_vertical"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvWrongExam"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5.0dip"
            android:drawableLeft="@drawable/wrong_mark"
            android:drawablePadding="5.0dip"
            android:gravity="center_vertical"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>