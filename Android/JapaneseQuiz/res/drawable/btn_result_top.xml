            <corners android:radius="3dp"/>
            <stroke android:width="0.5dp" android:color="@color/orange"/>
            <solid android:color="@color/grey"/>
            <padding android:left="10dp" android:right="10dp" android:top="5dp"  android:bottom="5dp"/>
        </shape>
    </item>
    
